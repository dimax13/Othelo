<Window x:Class="Othelo.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Othelo.View"
        xmlns:vm="clr-namespace:Othelo.ViewModel"
        Title="WPF Othelo" Height="480" Width="640" FontFamily="Rounded M+ 1c black">
    <Window.DataContext>
        <vm:GameInfo/>
    </Window.DataContext>
    <DockPanel>
        <DockPanel.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="32"/>
                <Setter Property="Margin" Value="8"/>
            </Style>
        </DockPanel.Resources>
        <Menu DockPanel.Dock="Top" FontSize="16">
            <MenuItem Header="ファイル">
                <MenuItem Header="新規開始"/>
                <MenuItem Header="中断"/>
                <MenuItem Header="再開"/>
                <MenuItem Header="終了" Command="{Binding Path=ExitCommand}"/>
            </MenuItem>
        </Menu>
        <StackPanel DockPanel.Dock="Left" VerticalAlignment="Center" TextBlock.TextAlignment="Center">
            <TextBlock Text="黒"/>
            <TextBlock Text="スコア"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Right" VerticalAlignment="Center" TextBlock.TextAlignment="Center">
            <TextBlock Text="白"/>
            <TextBlock Text="スコア"/>
        </StackPanel>
        <local:BoardControl DockPanel.Dock="Bottom"/>
    </DockPanel>
</Window>
